{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 19,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "COMPILER_FLAGS": "-Wall -Wextra -Wno-unused-parameter -Wno-missing-field-initializers",
                "COMPILER_DEFENISIONS": "-DNVTX_ENABLE",
                "CMAKE_CUDA_COMPILER": "/usr/local/cuda/bin/nvcc",
                "CMAKE_CUDA_ARCHITECTURES": "72;87;89",
                "CMAKE_CXX_STANDARD": "20",
                "CMAKE_CUDA_STANDARD": "17",
                "CMAKE_CXX_STANDARD_REQUIRED": "ON",
                "CMAKE_CUDA_STANDARD_REQUIRED": "ON",
                "CMAKE_POSITION_INDEPENDENT_CODE": "ON",
                "PROFILING_OUTPUT_PATH": "${sourceDir}/profilings",
                "PROFILING_OUTPUT_ARCHIVE_PATH": "${sourceDir}/profilings_archive",
                "ENABLE_SOME_FLAG": "ON"
            }
        },
        {
            "name": "debug-x64",
            "inherits": "base",
            "displayName": "Debug build",
            "description": "Debug build with CUDA",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CUDA_FLAGS_DEBUG": "-g -G -O0",
                "CUDA_NVCC_FLAGS": "-g -G -O0",
                "CMAKE_CXX_FLAGS_DEBUG": "-g -O0",
                "CUDA_LAUNCH_BLOCKING": "1",
                "CUDA_SEPARABLE_COMPILATION": "ON"
            }
        },
        {
            "name": "profile-x64",
            "inherits": "base",
            "displayName": "Profile build",
            "description": "Release build with profiling enabled",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_FLAGS_RELEASE": "-O3",
                "CMAKE_CUDA_FLAGS_RELEASE": "-O3 -Xptxas -O3 -DNDEBUG",
                "PROFILING_ENABLED": "ON"
            }
        }
    ],
    "buildPresets": [
        {
        "name": "debug-x64",
        "configurePreset": "debug-x64",
        "configuration": "Debug"
        }
    ]
}